# dataset.toml for Z-Image Base LoRA character training

[general]
resolution = [1024, 1024]
caption_extension = ".txt"
batch_size = 1
enable_bucket = true
bucket_no_upscale = false
shuffle_caption = false

[[datasets]]
image_directory = "/workspace/dataset/images"
cache_directory = "/workspace/dataset/cache"
num_repeats = 1
